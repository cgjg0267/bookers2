<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>User info</h1>

<% if @user.errors.any? %>
  <%= @user.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
<p>Name</p>
<%= f.text_field :name, autofocus: true, class: "form-control", placeholder:"名前" %><br>

<p>Image</p>
<%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file" %><br>

<p>Introduction</p>
<%= f.text_area :introduction, autofocus: true, class: "form-control", placeholder:"紹介" %><br>



<%= f.submit 'Update User', class: "btn btn-secondary" %>

<% end %>

    </div>
  </div>
</div>